@{
    Layout = null;
}

<!DOCTYPE html>

<html ng-app="app">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Visual Social Network</title>

    <link href="~/Content/Stylesheets/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/Stylesheets/facebook.css" rel="stylesheet" />



    <!-- vendor js files -->
    <script src="~/Scripts/vendor/moment/moment.js"></script>
    <script src="~/Scripts/vendor/jquery.js"></script>
    <script src="~/Scripts/vendor/angular/angular.min.js"></script>
    <script src="~/Scripts/vendor/angular-ui-router/release/angular-ui-router.min.js"></script>
    <script src="~/Scripts/vendor/angular-cookies/angular-cookies.min.js"></script>
    <script src="~/Scripts/vendor/angular-bootstrap/ui-bootstrap-tpls.min.js"></script>

    <!-- our angular js files -->

    <script src="~/app/ng-app.js"></script>
    <script src="~/app/guest/login/loginController.js"></script>
    <script src="~/app/admin/list_of_users/usersListController.js"></script>
    <title>Index</title>
</head>
<body>

    <div class="wrapper">
        <div class="box">
            <div class="row row-offcanvas row-offcanvas-left">
                <div class="col-sm-12 col-xs-12" style="padding-left:0px; padding-right:0px">
                    <!-- top nav -->
                    <div class="navbar navbar-blue navbar-static-top pull-right">
                        <div class="navbar-header">
                            <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="sr-only">Toggle</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a href class="navbar-brand logo">vsn</a>
                        </div>
                        <nav class="collapse navbar-collapse" role="navigation">
                            <form class="navbar-form navbar-left">
                                <div class="input-group input-group-sm" style="max-width:360px;">
                                    <input class="form-control" placeholder="Search" name="srch-term" id="srch-term" type="text">
                                    <div class="input-group-btn">
                                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                                    </div>
                                </div>
                            </form>
                            <ul class="nav navbar-nav" ng-show="user.isAuth">
                                <li>
                                    <a href="#"><i class="glyphicon glyphicon-home"></i> Home</a>
                                </li>
                                <li>
                                    <a href="#postModal" role="button" data-toggle="modal"><i class="glyphicon glyphicon-plus"></i> Post</a>
                                </li>
                                <li>
                                    <a href="#"><span class="badge">badge</span></a>
                                </li>
                            </ul>

                            <ul class="nav navbar-nav navbar-right" ng-show="!user.isAuth">
                                <li>
                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-2 control-label m-t-12">Email</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control m-t-6" placeholder="username" ng-model="credentials.username">
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <div class="form-group">
                                        <label for="inputEmail3" class="col-sm-3 control-label m-t-12">Password</label>
                                        <div class="col-sm-9">
                                            <input type="password" class="form-control m-t-6" placeholder="password" ng-model="credentials.passwordHash">
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <button class="btn btn-primary btn-md m-t-6 m-r-12" style="background-color:#428bca" ng-click="login()">Log in</button>
                                </li>
                            </ul>

                            <ul class="nav navbar-nav navbar-right" ng-show="user.isAuth">
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                        tkaldzija@devlogic.eu
                                        <i class="glyphicon glyphicon-user"></i>

                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a href="">More</a></li>
                                        <li><a href="">More</a></li>
                                        <li><a href="">More</a></li>
                                        <li><a href="">More</a></li>
                                        <li><a href="">More</a></li>
                                    </ul>
                                </li>
                            </ul>
                    </nav>
                </div>
            </div>

            <div ui-view>

            </div>
               
        </div>
    </div>
</div>

</body>
</html>
